{
  "compileOnSave": true,
  "compilerOptions": {
    // 这样就可以对 `this` 上的数据属性进行更严格的推断`
    "noImplicitAny": true,
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks" :false,
    "inlineSourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "vite.config.ts"
  ]
}
